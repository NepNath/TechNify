{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/cart.css') }}">
{% endblock %}




{% block body %}
<div class="info-container">
    <a href="{{ path('app_index') }}" class="back-button">
        <svg height="16" width="16" xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 1024 1024">
            <path d="M874.690416 495.52477c0 11.2973-9.168824 20.466124-20.466124 20.466124l-604.773963 0 188.083679 188.083679c7.992021 7.992021 7.992021 20.947078 0 28.939099-4.001127 3.990894-9.240455 5.996574-14.46955 5.996574-5.239328 0-10.478655-1.995447-14.479783-5.996574l-223.00912-223.00912c-3.837398-3.837398-5.996574-9.046027-5.996574-14.46955 0-5.433756 2.159176-10.632151 5.996574-14.46955l223.019353-223.029586c7.992021-7.992021 20.957311-7.992021 28.949332 0 7.992021 8.002254 7.992021 20.957311 0 28.949332l-188.073446 188.073446 604.753497 0C865.521592 475.058646 874.690416 484.217237 874.690416 495.52477z"></path>
        </svg>
        <span>Back</span>
    </a>
</div>

    <div class="panier-container">
        <h1 class="panier-title">Votre panier</h1>

        {% if cart is empty %}
            <p>Votre panier est vide.</p>
        {% else %}
            <table>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
                {% for item in cart %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td class="prix">{{ item.product.price }} ‚Ç¨</td>
                        <td>
                            <form action="{{ path('cart_update', {'id': item.product.id}) }}" method="post">
                                {{ item.quantity }}
                            </form>
                        </td>
                        <td class="montant">{{ item.product.price * item.quantity }} ‚Ç¨</td>
                        <td>
                            <a href="{{ path('cart_add', {'id': item.product.id}) }}">+</a>
                            <a href="{{ path('cart_remove', {'id': item.product.id}) }}">üóë Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>

            <div class="total">
                <h3 class="montant">Total : {{ total is defined ? total : 0 }} ‚Ç¨</h3>
                <button class="payer">üí≥ Commander</button>
            </div>

            <a class="back-button" href="{{ path('app_index') }}">
                ‚Üê Retour
            </a>
        {% endif %}
    </div>

    <div class="popup" id="confirmationPopup">
        <div class="popup-content">
            <p>Confirmez-vous votre achat ?</p>
            <button class="oui" onclick="confirmPurchase()">Oui</button>
            <button class="non" onclick="closePopup()">Non</button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        let orderButton = document.querySelector('.payer');
        if (orderButton) {
            orderButton.addEventListener('click', function(event) {
                event.preventDefault();
                document.getElementById('confirmationPopup').style.display = 'block';
            });
        }
    });

    function closePopup() {
        document.getElementById('confirmationPopup').style.display = 'none';
    }

    function confirmPurchase() {
        closePopup();
        let notification = document.createElement('div');
        notification.className = 'confirmation-notification';
        notification.innerText = 'Commande valid√©e avec succ√®s !';
        document.body.appendChild(notification);
        notification.style.display = 'block';

        setTimeout(() => {
            notification.style.display = 'none';
            notification.remove();
        }, 3000);
    }
</script>
{% endblock %}
