{% extends 'base.html.twig' %}

{% block title %}Inscription | TechNify{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
{% endblock %}

    <div class="register-container">
        <div class="sidebar">
            <div class="logo">
                {{ include('logo.svg.twig') }}
            </div>
        </div>
        <div class="register-form">
            <h2>Bienvenue dans la seule boutique<br> où on sait que 8 Go de RAM,<br> c'est jamais assez.</h2>
            
           {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password) }}
            {{ form_row(form.save) }}
            {{ form_end(form) }}
            
            <p class="login-link">> Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
            <p class="credits">> <a href="#">Crédits</a></p>
        </div>
    </div>
{% endblock %}
