{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="sidebar">
        <div class="logo">
            {{ include('logo.svg.twig') }}
        </div>
    </div>

    <div class="login-form">
        <h2>Connexion Ã  votre compte</h2>

        {% if error %}
            <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <div class="input-group">
                <label for="username">Email :</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus>
            </div>

            <div class="input-group">
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password" required>
            </div>

            <button type="submit">Se connecter</button>
        </form>

        <p class="register-link">
            <a href="{{ path('app_register') }}">Pas encore de compte ? Inscrivez-vous.</a>
        </p>
    </div>
</div>
{% endblock %}
